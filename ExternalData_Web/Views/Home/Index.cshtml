@model ExternalData_Web.Models.ViewModel.Organization_OrgRatingVM;

<body>
    <div id="place"></div>
    <table id="MainTable" class="Display dt-resposnive table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>INN</th>
                <th>Rating</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
           
            @foreach (var item in Model.OrgRatings)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ID)</td>
                    @foreach (var org in Model.Organizations.Where(u => u.OID == item.Org_ID))
                    {
                    <td>@Html.DisplayFor(modelItem => org.INN)</td>
                    }
                    @*<td>@Html.DisplayFor(modelItem => item.INN)</td>*@
                    <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                    <td><button type="button" class="btn btn-sm" data-toggle="ajax-modal" data-target="#Edit" data-url="@Url.Action($"Upsert?Org_ID={item.Org_ID}")">Edit</button></td>
                </tr>
            }
          
        </tbody>
    </table>
</body>
@section scripts{
    <script src="~/js/MainTable.js"></script>
}